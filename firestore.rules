// Firestore rules — CHRISCO
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // === CHAT (public peut créer, admin peut lire) ===
    match /chats/{chatId} {
      allow create: if true;
      allow update: if true;
      allow read, delete: if request.auth != null;

      match /messages/{msgId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
      }
    }

    // === APROPOS (lecture publique / écriture admin) ===
    match /apropos/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // === ALBUMS (photos & vidéos) ===
    match /albums/{category} {
      allow read: if true;
      allow write: if request.auth != null;

      match /list/{itemId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    // Présentation bannière
    match /presentation/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Ministères
    match /ministeres/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Organigramme
    match /organigramme/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Programme
    match /programme/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Contacts (messages via formulaire)
    match /contacts/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // === PAR DÉFAUT : lecture publique, écriture admin ===
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
